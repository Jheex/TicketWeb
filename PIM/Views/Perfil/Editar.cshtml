@model PIM.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<link rel="stylesheet" href="~/css/perfil.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


<div class="profile-container">
    <div class="profile-card">
        
        <h2 class="mb-4">Editar Perfil</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="fa-solid fa-circle-check me-2"></i> @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fa-solid fa-circle-xmark me-2"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form asp-controller="Perfil" asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-row">
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="Username"><i class="fa-solid fa-user"></i> Nome de Usuário</label>
                        <input asp-for="Username" class="form-control" placeholder="Seu nome de usuário único" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"><i class="fa-solid fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="email@exemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefone"><i class="fa-solid fa-phone"></i> Telefone</label>
                        <input asp-for="Telefone" class="form-control" type="tel" placeholder="(XX) XXXXX-XXXX" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="Endereco"><i class="fa-solid fa-location-dot"></i> Endereço</label>
                        <input asp-for="Endereco" class="form-control" placeholder="Rua, Número, Bairro" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DataNascimento"><i class="fa-solid fa-calendar"></i> Data de Nascimento</label>
                        <input asp-for="DataNascimento" class="form-control" type="text" placeholder="DD/MM/AAAA" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status"><i class="fa-solid fa-circle"></i> Status</label>
                        <select asp-for="Status" class="form-control"> 
                            <option value="Ativo">Ativo</option>
                            <option value="Inativo">Inativo</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Observacoes"><i class="fa-solid fa-note-sticky"></i> Observações</label>
                <textarea asp-for="Observacoes" class="form-control" rows="4" placeholder="Adicione notas ou informações adicionais..."></textarea>
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>

            <div class="profile-actions mt-5">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Salvar Alterações
                </button>
                <a asp-action="Index" asp-controller="Perfil" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Cancelar e Voltar
                </a>
            </div>
        </form>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            // Aplica a máscara DD/MM/AAAA no campo de Data de Nascimento
            $('#DataNascimento').mask('00/00/0000');
            
            // Sugestão: Aplica máscara de telefone, se ainda não estiver fazendo
            // Se o seu modelo de telefone for (XX) XXXXX-XXXX
            $('#Telefone').mask('(00) 00000-0000');
        });
    </script>
}