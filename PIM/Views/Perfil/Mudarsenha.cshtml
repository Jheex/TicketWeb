@model PIM.Models.Admin

@{
    ViewData["Title"] = "Mudar Senha";
}

<div class="profile-container">
    <div class="profile-card">
        <h2>Mudar Senha</h2>
        
        <form asp-action="MudarSenha">
            <div class="form-group">
                <label for="senhaAtual">Senha Atual</label>
                <input type="password" id="senhaAtual" name="senhaAtual" class="form-control" />
            </div>
            <div class="form-group">
                <label for="novaSenha">Nova Senha</label>
                <input type="password" id="novaSenha" name="novaSenha" class="form-control" />
            </div>
            <div class="form-group">
                <label for="confirmarNovaSenha">Confirmar Nova Senha</label>
                <input type="password" id="confirmarNovaSenha" name="confirmarNovaSenha" class="form-control" />
            </div>
            
            <div class="profile-actions mt-4">
                <button type="submit" class="btn btn-primary">Salvar Senha</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Perfil.css" />
}