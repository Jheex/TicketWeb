@model ForgotPasswordViewModel
@{
    // Define o título da página e remove o layout padrão
    ViewData["Title"] = "Esqueci a Senha";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Título da aba do navegador -->
    <title>@ViewData["Title"] - Sistema de Chamados</title>

    <!-- Estilos específicos para a tela de login/esqueci senha -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <!-- Ícones do Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <!-- Container principal que centraliza o conteúdo na tela -->
    <div class="login-container">
        <!-- Wrapper que envolve o formulário -->
        <div class="login-form-wrapper">

            <!-- Botão de alternância de tema (claro/escuro) -->
            <div class="theme-toggle-container">
                <button type="button" class="theme-toggle-btn" onclick="toggleTheme()" aria-label="Alternar tema">
                    <i id="theme-icon" class="bi bi-sun-fill"></i>
                </button>
            </div>

            <main>
                <!-- Área onde o formulário será carregado ou substituído -->
                <div id="form-wrapper">
                    <!-- Formulário de recuperação de senha -->
                    <form id="forgotPasswordForm">

                        <!-- Ícone de envelope ilustrativo -->
                        <div class="form-logo">
                            <i class="bi bi-envelope" style="font-size:48px; color: var(--color-primary);"></i>
                        </div>

                        <!-- Cabeçalho do formulário -->
                        <div class="form-header">
                            <h2>Esqueceu a Senha?</h2>
                            <p class="subtitle">Insira seu e-mail para receber instruções de redefinição.</p>
                        </div>

                        <!-- Campo de entrada de e-mail -->
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" id="email" class="form-control" placeholder="Digite seu e-mail" maxlength="40" required />
                        </div>

                        <!-- Botões de ação: enviar ou cancelar -->
                        <div class="form-group buttons-group">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                            <button type="button" class="btn btn-cancel" onclick="window.location.href='/Account/Login'">Cancelar</button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Seleciona o formulário de recuperação de senha
        const form = document.getElementById('forgotPasswordForm');

        // Adiciona um evento para interceptar o envio do formulário
        form.addEventListener('submit', function(e) {
            e.preventDefault(); // impede o envio real

            // Captura o valor digitado no campo de e-mail
            const email = document.getElementById('email').value;
            
            // Seleciona a área do formulário para substituir pelo feedback de sucesso
            const wrapper = document.getElementById('form-wrapper');

            // Substitui o conteúdo do formulário por mensagem de confirmação
            wrapper.innerHTML = `
                <div class="form-logo">
                    <i class="bi bi-check-circle" style="font-size:48px; color: var(--color-primary);"></i>
                </div>
                <div class="form-header">
                    <h2>E-mail Enviado!</h2>
                    <p class="subtitle">
                        Foi enviado um e-mail de verificação para: <strong>${email}</strong>.<br/>
                        Siga as instruções no e-mail para redefinir sua senha.
                    </p><br><br/>
                    <button onclick="window.location.href='/Account/Login'" class="btn btn-primary">Voltar ao Login</button>
                </div>
            `;
        });
    </script>

    <!-- Script externo com funções de login e alternância de tema -->
    <script src="~/js/Login.js" asp-append-version="true"></script>
</body>
</html>
