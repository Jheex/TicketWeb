@model ErrorViewModel

@{
    // Define o título da página que será exibido na tag <title> do layout
    ViewData["Title"] = "Error";
}

<!-- Cabeçalho principal de erro -->
<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<!-- Exibe o ID da requisição apenas se ShowRequestId for verdadeiro -->
@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong>
        <!-- RequestId é útil para rastrear o erro nos logs do servidor -->
        <code>@Model.RequestId</code>
    </p>
}

<!-- Seção informativa sobre o modo de desenvolvimento -->
<h3>Development Mode</h3>
<p>
    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
</p>
<p>
    <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
    <!-- Aviso de segurança: o modo de desenvolvimento exibe informações sensíveis -->
    It can result in displaying sensitive information from exceptions to end users.
    For local debugging, enable the <strong>Development</strong> environment by setting the 
    <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
    and restarting the app.
</p>
