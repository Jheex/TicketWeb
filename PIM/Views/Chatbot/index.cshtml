@{
    ViewData["Title"] = "Chatbot";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chatbot InovaTech</title>
    <link rel="stylesheet" href="~/css/Chatbot.css" />
</head>
<body>

<main class="chatbot-page">
    <div class="chat-container">
        <h2>InteligÃªncia Artificial InovaTech</h2>
        <div class="chatbox">
            <div id="chat-messages" class="chat-messages" aria-live="polite"></div>

            <div id="suggestion-buttons" class="suggestion-buttons"></div>
            
            <form id="chat-form" class="chat-input">
                <input type="text" id="user-input" placeholder="Digite sua mensagem..." aria-label="Digite sua mensagem para o chatbot" required />
