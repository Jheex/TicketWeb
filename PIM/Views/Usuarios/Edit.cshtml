@model PIM.Models.Admin
@{
    ViewData["Title"] = "Editar Usuário";
}

<link rel="stylesheet" href="~/css/Cadastros.css" />

<div class="cadastro-container">
    <h2 class="page-title">✏️ Editar Usuário</h2>

    <form asp-action="Edit" method="post" class="form-edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="input-text" />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="input-text" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Senha</label>
            <input asp-for="Password" type="password" class="input-text" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Salvar</button>
            <a asp-action="Index" class="btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
